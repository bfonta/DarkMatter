import pynbody as pn

class Halos():
    """
    Halos management
    """
    def _init_(self, filename, N):
        self.filename = filename
        self.N = N

        s = pn.load(os.path.join(DataFolder,SubhalosFolder))
        s['eps'] = 200.*pn.units.pc
        s.physical_units()
        self.halos = s.halos[:N]

    def getHalo(self, n):
        if n<=self.N: 
            return self.halos[n]
        else:
            raise IndexError
            return self.halos[-1]

    def getHalos(self):
        return self.halos
